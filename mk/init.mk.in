prefix       = @prefix@
exec_prefix  = @exec_prefix@
bindir       = @bindir@
libdir       = @libdir@
datadir      = @datadir@/@PACKAGE_NAME@
includedir   = @includedir@
pkgincludedir= @includedir@/@PACKAGE_NAME@
pkgconfigdir = @libdir@/pkgconfig

abs_top_srcdir = @abs_top_srcdir@
abs_top_builddir = @abs_top_builddir@

PACKAGE      = @PACKAGE_NAME@
VERSION      = @PACKAGE_VERSION@
BUG-REPORT   = @PACKAGE_BUGREPORT@

CPPFLAGS = @CPPFLAGS@ @DEFS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

CC       = @CC@
ifeq ($(findstring gcc,$(CC)),gcc)
GNU_CC_EXTRA_FLAGS=-Wall
endif
CFLAGS   = @CFLAGS@ $(GNU_CC_EXTRA_FLAGS)

CXX      = @CXX@
ifeq ($(findstring g++,$(CXX)),g++)
GNU_CXX_EXTRA_FLAGS=-Wall
endif
CXXFLAGS = @CXXFLAGS@ $(GNU_CXX_EXTRA_FLAGS)

USE_PCH  = @USE_PCH@
PCH_HEADER = @PCH_HEADER@

VERBOSE ?= no
ifneq ($(VERBOSE),yes)
COMMAND_PREFIX=@echo $(DESCRIPTION) &&
LIBTOOL_OPTIONS=--silent
endif

LIBTOOL = @LIBTOOL@ $(LIBTOOL_OPTIONS)
LTCC    = $(LIBTOOL) --mode=compile $(CC)
LTCXX   = $(LIBTOOL) --mode=compile $(CXX)
LTLD    = $(LIBTOOL) --mode=link    $(CXX)
LTRM    = $(LIBTOOL) --mode=clean   rm -f

DEP_FLAG = -MM

HAS_DOXYGEN = @HAS_DOXYGEN@
DOXYGEN  = @DOXYGEN@
HAS_RDOC = @HAS_RDOC@
RDOC	  = @RDOC@

INSTALL                 = @INSTALL@
INSTALL_DIR             = @INSTALL@ -d
INSTALL_DATA            = @INSTALL_DATA@
INSTALL_HEADER          = $(INSTALL_DATA)
INSTALL_PROGRAM         = $(LIBTOOL) --mode=install cp
INSTALL_LIB             = $(LIBTOOL) --mode=install cp
INSTALL_SCRIPT          = @INSTALL_PROGRAM@
INSTALL_PKG_CONFIG_FILE = $(INSTALL_HEADER)

### Variables for Tcl support
HAS_TCL_SUPPORT=@HAS_TCL_SUPPORT@
tclmoduledir=$(libdir)
TCL_CC=@TCL_CC@
TCL_CPPFLAGS=@TCL_CPPFLAGS@
TCL_EXTRA_CFLAGS=@TCL_EXTRA_CFLAGS@
TCL_LDFLAGS=@TCL_LDFLAGS@
TCL_LIB_SPEC=@TCL_LIB_SPEC@
TK_LIB_SPEC=@TK_LIB_SPEC@
TCL_LIBS=$(TCL_LIB_SPEC) $(TK_LIB_SPEC)
TCL_SHLIB_CFLAGS=@TCL_SHLIB_CFLAGS@
TCL_SHLIB_LDFLAGS=@TCL_SHLIB_LDFLAGS@
TCL_SHLIB_LD=@TCL_SHLIB_LD@
TCL_SHLIB_SUFFIX=@TCL_SHLIB_SUFFIX@
TCL_LIB_FLAGS=@TCL_LIB_FLAGS@
TCL_DBGX=@TCL_DBGX@

# Variables for Ruby support
HAS_RUBY_SUPPORT = @HAS_RUBY_SUPPORT@
RUBY_CPPFLAGS = @RUBY_CPPFLAGS@
RUBY_CFLAGS = @RUBY_CFLAGS@
RUBY_LIBDIR = @RUBY_LIBDIR@
RUBY_EXTDIR = @RUBY_EXTDIR@
TESTRB = @TESTRB@

# For ANTLR support
ANTLR= @ANTLR@
ANTLR_CFLAGS= @ANTLR_CFLAGS@
ANTLR_LDFLAGS= @ANTLR_LIBS@

# Boost libraries
BOOST_CPPFLAGS = @BOOST_CPPFLAGS@
BOOST_LDFLAGS  = @BOOST_LDFLAGS@
BOOST_FILESYSTEM_CPPFLAGS = @BOOST_FILESYSTEM_CPPFLAGS@
BOOST_FILESYSTEM_LDFLAGS = @BOOST_FILESYSTEM_LDFLAGS@


### Variables for test support
HAS_TEST_SUPPORT=@HAS_TEST_SUPPORT@
CLBS_TEST_CPPFLAGS=@CLBS_TEST_CPPFLAGS@
CLBS_TEST_LDFLAGS=@CLBS_TEST_LDFLAGS@

### Set up default targets
all: build
distclean: distclean-common
doc:
test:

distclean-common: clean
	rm -f Makefile

### Ensure that default target is build
$(top_builddir)/libtool: @LIBTOOL_DEPS@
$(top_builddir)/Doxyfile: $(top_srcdir)/Doxyfile.in

VPATH=$(srcdir)

include $(abs_top_builddir)/Init.make
include $(abs_top_srcdir)/mk/pch.mk

